<div class="row msgrow flirt-{{isFlirt}}">
                    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{user.name}} says:</h3>
        </div>
    <div class="panel-body">

        <div class="col-sm-2">
            <img class="msgimage" src={{user.image}}>
        </div>
        <div class="col-sm-10 {{send-recieve}}">
                        <div class="well">
                            <p class="msgtext">{{text}}</p>
                        </div>

                                                <button type="button" class="btn btn-success btn-match pull-right flirt" data-id="{{id}}">Flirt</button>
                                <button type="button" class="btn btn-secondary btn-match pull-right whatever" data-id="{{id}}">Whatever</button>
                        {{#if readTo}}
                            <button class="btn msgbtn btn-success pull-right"> Read </button>
                        {{else}}
                            <button class="btn msgbtn btn-info read pull-right" data-id={{id}}> Mark As Read </button>
                        {{/if}}
                    </div>
        </div>
    </div>
</div>


